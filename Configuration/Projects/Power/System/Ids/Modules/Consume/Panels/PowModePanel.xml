<?xml version="1.0" encoding="utf-8"?>
<PanelClass Name="PowModePanel">
    <Description>Panel for change of power mode</Description>
    <PanelObject ParentGlobalID="Ids.Consume" Background="ContainerBackground">
        <RowDefinition />
        <ColumnDefinition />
        <Grid Row="1" Column="1" IsStacked="TRUE" Orientation="Vertical">
            <ioButtonText LocalID="ButtDockIdle" VerticalAlignment="Top" Height="40">
                <Properties Text="Docking and idle (IDLE)" TypeColor="Normal" />
            </ioButtonText>
            <ioButtonText LocalID="ButtDockConnectedShore" VerticalAlignment="Top" Height="40">
                <Properties Text="Docking connected to shore power (SHORE)" TypeColor="Normal" />
            </ioButtonText>
            <ioButtonText LocalID="ButtDockNotConnected" VerticalAlignment="Top" Height="40">
                <Properties Text="Docking not connected (DISCONNECT)" TypeColor="Normal" />
            </ioButtonText>
            <ioButtonText LocalID="ButtInTransit" VerticalAlignment="Top" Height="40">
                <Properties Text="In transit daylight (TRANSIT)" TypeColor="Normal" />
            </ioButtonText>
            <ioButtonText LocalID="ButtInTransitEngine" VerticalAlignment="Top" Height="40">
                <Properties Text="In transit night using engine (ENGINE)" TypeColor="Normal" />
            </ioButtonText>
            <ioButtonText LocalID="ButtInTransitSailing" VerticalAlignment="Top" Height="40">
                <Properties Text="In transit night sailing (SAILING)" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
    </PanelObject>
    <PanelObject ParentGlobalID="Pow.CpA" Background="ContainerBackground">
        <RowDefinition />
        <ColumnDefinition />
        <Grid Row="1" Column="1" IsStacked="TRUE" Orientation="Vertical">
            <ioButtonText LocalID="ButtInTransit" VerticalAlignment="Top" Height="40">
                <Properties Text="In transit daylight (TRANSIT)" TypeColor="Normal" />
            </ioButtonText>
            <ioButtonText LocalID="ButtInTransitEngine" VerticalAlignment="Top" Height="40">
                <Properties Text="In transit night using engine (ENGINE)" TypeColor="Normal" />
            </ioButtonText>
            <ioButtonText LocalID="ButtInTransitSailing" VerticalAlignment="Top" Height="40">
                <Properties Text="In transit night sailing (SAILING)" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
    </PanelObject>
</PanelClass>