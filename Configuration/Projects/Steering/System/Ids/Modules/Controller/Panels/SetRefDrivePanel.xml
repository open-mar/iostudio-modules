<?xml version="1.0" encoding="utf-8"?>
<PanelClass Name="SetRefDrivePanel">
    <Description>Panel for setting commands in drive steering mode</Description>
    <PanelObject ParentGlobalID="Ids.Controller" Background="ContainerBackground">
        <RowDefinition Size="65" />
        <RowDefinition Size="65" />
        <ColumnDefinition Size="64" />
        <ColumnDefinition />
        <ColumnDefinition Size="64"/>
        <Grid Row="1" Column="1">
            <ioButtonIcon LocalID="ButtonLeftThrust">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="arrow_back" />
            </ioButtonIcon>
        </Grid>
        <Grid Row="1" Column="2">
            <ioPanelGrid LocalID="GridThrustCmdHeaderDrv" HorizontalAlignment="Left" Width="55" VerticalAlignment="Top" Height="65" Margin="12,0,0,0">
                <ioLabel LocalID="LabelThrustCmdHeaderDrv" Margin="0,20,0,0">
                    <Properties Text="THRUST" FontSize="Small" FontWeight="SemiBold" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
                </ioLabel>
                <ioLabel LocalID="LabelThrustCmdHeaderUnitDrv">
                    <Properties Text="%" FontSize="Small" FontWeight="Normal" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
                </ioLabel>
            </ioPanelGrid>
            <ioPanelGrid LocalID="GridThrustCmdDrv" HorizontalAlignment="Right" Width="132" VerticalAlignment="Top" Height="65">
                <ioTextBlock LocalID="InstrThrustCmdDrv" HorizontalAlignment="Right" Width="102" Margin="0,0,12,0">
                    <Properties Text="0" TypeColor="InstrumentEnhancedSecondary" FontFamily="NotoSans" FontSize="Huge" FontWeight="SemiBold" TextWrapping="NoWrap" Decimals="1" TextAlignment="End" />
                </ioTextBlock>
            </ioPanelGrid>
        </Grid>
        <Grid Row="1" Column="3">
            <ioButtonIcon LocalID="ButtonRightThrust">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="arrow_forward" />
            </ioButtonIcon>
        </Grid>
        <Grid Row="2" Column="1">
            <ioButtonIcon LocalID="ButtonLeftRudder">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="arrow_back" />
            </ioButtonIcon>
        </Grid>
        <Grid Row="2" Column="2">
            <ioPanelGrid LocalID="GridRudderCmdHeader" HorizontalAlignment="Left" Width="64" VerticalAlignment="Top" Height="65" Margin="12,0,0,0">
                <ioLabel LocalID="LabelRudderCmdHeader" Margin="0,20,0,0">
                    <Properties Text="RUDDER" FontSize="Small" FontWeight="SemiBold" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
                </ioLabel>
                <ioLabel LocalID="LabelRudderCmdHeaderUnit">
                    <Properties Text="%" FontSize="Small" FontWeight="Normal" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
                </ioLabel>
            </ioPanelGrid>
            <ioPanelGrid LocalID="GridRudderCmd" HorizontalAlignment="Right" Width="132" VerticalAlignment="Top" Height="65">
                <ioTextBlock LocalID="InstrRudderCmd" HorizontalAlignment="Right" Width="112" Margin="0,0,12,0">
                    <Properties Text="0" TypeColor="InstrumentEnhancedSecondary" FontFamily="NotoSans" FontSize="Huge" FontWeight="SemiBold" TextWrapping="NoWrap" Decimals="1" TextAlignment="End" />
                </ioTextBlock>
            </ioPanelGrid>
        </Grid>
        <Grid Row="2" Column="3">
            <ioButtonIcon LocalID="ButtonRightRudder">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="arrow_forward" />
            </ioButtonIcon>
        </Grid>
    </PanelObject>
</PanelClass>