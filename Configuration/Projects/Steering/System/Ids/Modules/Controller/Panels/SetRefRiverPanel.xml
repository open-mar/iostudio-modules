<?xml version="1.0" encoding="utf-8"?>
<PanelClass Name="SetRefRiverPanel">
    <Description>Panel for setting rate of turn command in river mode</Description>
    <PanelObject ParentGlobalID="Ids.Controller" Background="ContainerBackground">
        <RowDefinition Size="65" />
        <RowDefinition Size="65" />
        <ColumnDefinition Size="64" />
        <ColumnDefinition />
        <ColumnDefinition Size="64" />
        <Grid Row="1" Column="1">
            <ioButtonIcon LocalID="ButtonRiverefRivertSmall">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="keyboard_arrow_left" />
            </ioButtonIcon>
        </Grid>
        <Grid Row="1" Column="2">
            <ioPanelGrid LocalID="GridRiverCmdRot" HorizontalAlignment="Left" Width="84" VerticalAlignment="Top" Height="65" Margin="12,0,0,0">
                <ioLabel LocalID="LabelRiverCmdRot" Margin="0,20,0,0">
                    <Properties Text="ROT CMD" FontSize="Small" FontWeight="SemiBold" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
                </ioLabel>
                <ioLabel LocalID="LabelRiverCmdRotUnit">
                    <Properties Text="°/min" FontSize="Small" FontWeight="Normal" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
                </ioLabel>
            </ioPanelGrid>
            <ioPanelGrid LocalID="GridRiverRotCmd" HorizontalAlignment="Right" Width="120" VerticalAlignment="Top" Height="65">
                <ioTextBlock LocalID="InstrRiverRotCmd" HorizontalAlignment="Right" Width="102" Margin="0,0,8,0">
                    <Properties Text="0" TypeColor="InstrumentEnhancedPrimary" FontFamily="NotoSans" FontSize="Huge" FontWeight="SemiBold" TextWrapping="NoWrap" Decimals="1" TextAlignment="End" />
                </ioTextBlock>
            </ioPanelGrid>
        </Grid>
        <Grid Row="1" Column="3">
            <ioButtonIcon LocalID="ButtRiverRightSmall">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="keyboard_arrow_right" />
            </ioButtonIcon>
        </Grid>
        <Grid Row="2" Column="1">
            <ioButtonIcon LocalID="ButtRiverLeftBig">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="keyboard_double_arrow_left" />
            </ioButtonIcon>
        </Grid>
        <Grid Row="2" Column="2">
            <ioButtonText LocalID="ButtRiverMidZero" HorizontalAlignment="Center" Width="64">
                <Properties Text="0" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
        <Grid Row="2" Column="3">
            <ioButtonIcon LocalID="ButtRiverRightBig">
                <Properties TypeColor="Normal" TypeFontIcon="MaterialDesign" IconID="keyboard_double_arrow_right" />
            </ioButtonIcon>
        </Grid>
    </PanelObject>
</PanelClass>