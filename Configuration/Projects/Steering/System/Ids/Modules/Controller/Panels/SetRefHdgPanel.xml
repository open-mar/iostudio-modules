<?xml version="1.0" encoding="utf-8"?>
<PanelClass Name="SetRefHdgPanel">
    <Description>Panel for setting heading command</Description>
    <PanelObject ParentGlobalID="Ids.Controller" Background="ContainerBackground">
        <RowDefinition Size="24" />
        <RowDefinition Size="40" />
        <RowDefinition Size="40" />
        <RowDefinition Size="40" />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <Grid Row="1" Column="1" SpanColumns="3">
            <ioLabel LocalID="LabelHeader">
                <Properties Text="SET REFERENCE MID DECKHOUSE" TypeLabel="OVERLINE" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
            </ioLabel>
        </Grid>
        <Grid Row="1" Column="2" />
        <Grid Row="1" Column="3" />
        <Grid Row="2" Column="1">
            <ioButtonText LocalID="ButtonLeftSmall">
                <Properties Text="-1" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
        <Grid Row="2" Column="2">
            <ioButtonText LocalID="ButtMidZero">
                <Properties Text="0" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
        <Grid Row="2" Column="3">
            <ioButtonText LocalID="ButtRightSmall">
                <Properties Text="+1" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
        <Grid Row="3" Column="1" SpanColumns="3">
            <ioTextBoxNumber LocalID="EncoderNumber" Margin="0,4,0,4">
                <Properties Text="0" TextAlignment="Center" Decimals="0" Min="-9999" Max="9999" />
            </ioTextBoxNumber>
        </Grid>
        <Grid Row="3" Column="2" />
        <Grid Row="3" Column="3" />
        <Grid Row="4" Column="1">
            <ioButtonText LocalID="ButtLeftBig">
                <Properties Text="-10" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
        <Grid Row="4" Column="2" />
        <Grid Row="4" Column="3">
            <ioButtonText LocalID="ButtRightBig">
                <Properties Text="+10" TypeColor="Normal" />
            </ioButtonText>
        </Grid>
    </PanelObject>
</PanelClass>