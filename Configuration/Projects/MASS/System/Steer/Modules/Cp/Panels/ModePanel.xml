<?xml version="1.0" encoding="utf-8"?>
<PanelClass Name="ModePanel">
    <Description>Mode control panel for CP1+2</Description>
    <PanelObject ParentGlobalID="Steer.CpM" Background="ContainerBackground">
        <RowDefinition Size="20" />
        <RowDefinition Size="40" />
        <RowDefinition Size="40" />
        <ColumnDefinition />
        <ColumnDefinition />
        <ColumnDefinition />
        <Grid Row="1" Column="1" SpanColumns="3">
            <ioLabel LocalID="HeaderModeControl">
                <Properties Text="MODE CONTROL MID DECKHOUSE" TypeLabel="OVERLINE" TypeColor="ElementNeutral" TextWrapping="NoWrap" />
            </ioLabel>
        </Grid>
        <Grid Row="1" Column="2" />
        <Grid Row="1" Column="3" />
        <Grid Row="2" Column="1">
            <ioButtonShape LocalID="ButtDp">
                <Properties Text="DP" TypeColor="Flat" TypeShape="Maneuvering" ShapeID="StationKeeping" />
            </ioButtonShape>
        </Grid>
        <Grid Row="2" Column="2">
            <ioButtonShape LocalID="ButtTrack">
                <Properties Text="TRACK" TypeColor="Flat" TypeShape="Maneuvering" ShapeID="TrackKeeping" />
            </ioButtonShape>
        </Grid>
        <Grid Row="2" Column="3">
            <ioButtonShape LocalID="ButtRiver">
                <Properties Text="RIVER" TypeColor="Flat" TypeShape="Maneuvering" ShapeID="Rotate" />
            </ioButtonShape>
        </Grid>
        <Grid Row="3" Column="1">
            <ioButtonShape LocalID="ButtWork">
                <Properties Text="WORK" TypeColor="Flat" TypeShape="Maneuvering" ShapeID="Joystick" />
            </ioButtonShape>
        </Grid>
        <Grid Row="3" Column="2">
            <ioButtonShape LocalID="ButtCourse">
                <Properties Text="AUTO" TypeColor="Normal" TypeShape="Maneuvering" ShapeID="Autopilot" />
            </ioButtonShape>
        </Grid>
        <Grid Row="3" Column="3">
            <ioButtonShape LocalID="ButtStandby">
                <Properties Text="STANDBY" TypeColor="Raised" TypeShape="Action" ShapeID="Off" />
            </ioButtonShape>
        </Grid>
    </PanelObject>
